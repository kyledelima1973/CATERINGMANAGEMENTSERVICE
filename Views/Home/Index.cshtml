@{
    ViewData["Title"] = "Home Page";
    var welcomeMessage = ViewData["Welcome"];
}
<div class="container mt-4">
    <div class="jumbotron bg-light p-4 rounded shadow-sm">
        <h1 class="display-4">@welcomeMessage</h1>
        <p class="lead">
            We provide catering for weddings, corporate events, birthdays, and more!
            Customize your event menu, submit special requests, and reserve your date — all in one place.
        </p>

        @if (!User.Identity.IsAuthenticated)
        {
            <p class="mt-4">
                <a class="btn btn-primary btn-lg" asp-area="Identity" asp-page="/Account/Register">Register</a>
                <a class="btn btn-outline-secondary btn-lg" asp-area="Identity" asp-page="/Account/Login">Login</a>
            </p>
        }
        else
        {
            <p class="mt-4">
                <a class="btn btn-success btn-lg" asp-controller="EventBookings" asp-action="Create">Book an Event</a>
            </p>
        }
    </div>
</div>


